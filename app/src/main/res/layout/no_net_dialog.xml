<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="5dp"
    android:background="@color/white"
    android:foreground="?android:attr/selectableItemBackground"
    android:orientation="vertical"
    android:paddingHorizontal="20dp">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/no_net_dia_anim"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/under_maintenance"
        app:lottie_repeatCount="1000"
        app:lottie_speed="0.7" />


    <TextView
        android:id="@+id/no_net_dia_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/no_net_dia_anim"
        android:layout_marginTop="30dp"
        android:text="@string/no_internet_connection"
        android:textAlignment="center"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/no_net_dia_sub_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/no_net_dia_header"
        android:layout_marginTop="10dp"
        android:text="@string/please_check_your_network_connection_and_try_again"
        android:textAlignment="center"
        android:textSize="12sp" />

    <Button
        android:id="@+id/no_net_dia_ok_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/no_net_dia_sub_title"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="20dp"
        android:text="OK"
        android:textSize="17sp" />

</RelativeLayout>